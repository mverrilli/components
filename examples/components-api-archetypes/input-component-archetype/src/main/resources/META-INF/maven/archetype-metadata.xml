<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0 http://maven.apache.org/xsd/archetype-descriptor-1.0.0.xsd"
        name="Create Component"
        xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.0.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <requiredProperties>
        <requiredProperty key="groupId">
            <defaultValue>org.talend.components</defaultValue>
        </requiredProperty>
        <requiredProperty key="artifactId">
            <defaultValue>components-file</defaultValue>
        </requiredProperty>
        <requiredProperty key="version">
            <defaultValue>0.1.0-SNAPSHOT</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>org.talend.components.file</defaultValue>
        </requiredProperty>
        <requiredProperty key="componentName">
            <defaultValue>FileInput</defaultValue>
        </requiredProperty>
		<requiredProperty key="componentPackage">
            <defaultValue>tfileinput</defaultValue>
        </requiredProperty>
<!--
        <requiredProperty key="if you want to change one the properties set above say N to the following question.">
            <defaultValue>_</defaultValue>
        </requiredProperty>
        -->

    </requiredProperties>
    <fileSets>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/main/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8" packaged="true" >
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*.properties</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" packaged="true" >
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*.png</include>
            </includes>
        </fileSet>
        <fileSet encoding="UTF-8" packaged="true" >
            <directory>src/main/resources</directory>
            <includes>
                <include>**/*.svg</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" packaged="true" encoding="UTF-8">
            <directory>src/test/java</directory>
            <includes>
                <include>**/*.java</include>
            </includes>
        </fileSet>
        <fileSet filtered="true" encoding="UTF-8">
            <directory>src/test/resources</directory>
            <includes>
                <include>**/*.*</include>
            </includes>
        </fileSet>
    </fileSets>
</archetype-descriptor>
